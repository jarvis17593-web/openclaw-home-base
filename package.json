{
  "name": "openclaw-home-base",
  "version": "1.0.0",
  "description": "Security-hardened dashboard for OpenClaw agent management, API cost tracking, and system monitoring",
  "type": "module",
  "main": "backend/src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "NODE_ENV=development tsx --watch backend/src/index.ts",
    "dev:frontend": "vite frontend --port 5173",
    "build": "tsc --noEmit && vite build frontend",
    "type-check": "tsc --noEmit",
    "lint": "eslint backend/src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "setup": "npm install && npm run db:init",
    "db:init": "node backend/src/db/initialize.js",
    "db:backup": "node backend/src/db/backup.js"
  },
  "keywords": [
    "openclaw",
    "dashboard",
    "monitoring",
    "security"
  ],
  "author": "OpenClaw",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.33",
    "secretlint": "^8.2.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.2.0"
  }
}
