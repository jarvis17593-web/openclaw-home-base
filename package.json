{
  "name": "openclaw-home-base",
  "version": "1.0.0",
  "description": "Security-hardened dashboard for OpenClaw agent management, API cost tracking, and system monitoring",
  "type": "module",
  "main": "backend/src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsx --watch backend/src/index.ts",
    "build": "tsc --noEmit && tsc --outDir dist backend/src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint backend/src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "setup": "npm install && npm run db:init",
    "db:init": "node backend/src/db/initialize.js",
    "db:backup": "node backend/src/db/backup.js"
  },
  "keywords": [
    "openclaw",
    "dashboard",
    "monitoring",
    "security"
  ],
  "author": "OpenClaw",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "secretlint": "^8.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
