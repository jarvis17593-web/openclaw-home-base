# Server
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-jwt-secret-change-in-production-32-chars-min
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-32-chars-min
DATABASE_ENCRYPTION_KEY=your-32-byte-hex-key-for-aes256

# OpenClaw Gateway
GATEWAY_URL=http://localhost:18789
GATEWAY_API_KEY=your-gateway-api-key

# Database
DATABASE_PATH=./data/openclaw-home-base.db
DATABASE_BACKUP_PATH=./data/backups

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PATH=./logs

# Features
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true
